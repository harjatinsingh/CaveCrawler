<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<launch>
	<include file="$(find localization)/launch/sub_launch/ekf_winebot.launch"/>
	<include file="$(find localization)/launch/sub_launch/navsat_transform.launch"/>
	<include file="$(find localization)/launch/sub_launch/hector_trajectory.launch"/>

	<node name="odom_cvt" pkg="localization" type="odom_cvt.py" output="screen"/>

	<!--STATIC TRANSFORMS-->
	<node pkg="tf2_ros" type="static_transform_publisher" name="imu" args="0.3302 0 0.7112 			1.57 0 0 base_link imu_link" />
  <node pkg="tf2_ros" type="static_transform_publisher" name="gps" args="0.8382 0 1.5494 				0 0 0 base_link /gps" />
  <node pkg="tf2_ros" type="static_transform_publisher" name="velodyne" args="1.1684 0 1.6256 	0 0 0 base_link lidar_link" />

	<!-- PLAYBACK -->
	<node pkg="rosbag" type="play" name="rosbagplay" args="$(find localization)/../../bags/outdoors/05.bag --clock -d 5 -r 1" required="true">
	<remap from="/imu/imu/data" to="/imu/data"/>

	</node>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find localization)/launch/sub_launch/localization.rviz"/>

</launch>
